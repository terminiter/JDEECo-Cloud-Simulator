<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cz.cuni.mff.d3s.jdeeco.cloudsimulator.administration.data.models.SimulationExecution" table="simulation_execution" catalog="jdeeco_simulation">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <many-to-one name="simulationConfiguration" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.administration.data.models.SimulationConfiguration" fetch="select">
            <column name="ConfigurationID" not-null="true" />
        </many-to-one>
        <many-to-one name="creator" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.administration.data.models.User" fetch="select">
            <column name="CreatorID" not-null="true" />
        </many-to-one>
        <property name="description" type="string">
            <column name="Description" length="1000" not-null="true" />
        </property>
        <property name="status">
            <column name="Status" not-null="true" />
            <type name="org.hibernate.type.EnumType">
            	<param name="enumClass">cz.cuni.mff.d3s.jdeeco.cloudsimulator.servers.SimulationStatus</param>
            </type>
        </property>
        <property name="created" type="timestamp" insert="false">
            <column name="Created" length="19" not-null="true" />
        </property>
        <property name="started" type="timestamp">
            <column name="Started" length="19" />
        </property>
        <property name="ended" type="timestamp">
            <column name="Ended" length="19" />
        </property>
        <property name="endSpecificationType">
            <column name="EndSpecificationType" not-null="true" />
            <type name="org.hibernate.type.EnumType">
            	<param name="enumClass">cz.cuni.mff.d3s.jdeeco.cloudsimulator.administration.data.models.ExecutionEndSpecificationType</param>
            </type>
        </property>
        <property name="endDate" type="timestamp">
            <column name="EndDate" length="19" />
        </property>
        <property name="runCount" type="int">
            <column name="RunCount" not-null="true" />
        </property>
        <set name="simulationRuns" table="simulation_run" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ExecutionID" not-null="true" />
            </key>
            <one-to-many class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.administration.data.models.SimulationRun" />
        </set>
    </class>
</hibernate-mapping>
