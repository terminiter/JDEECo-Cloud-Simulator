<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.SimulationConfiguration" table="simulation_configuration" catalog="jdeeco_simulation">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <many-to-one name="project" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.Project" fetch="select">
            <column name="ProjectID" not-null="true" />
        </many-to-one>
        <many-to-one name="simulationData" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.SimulationData" fetch="select">
            <column name="DataID" />
        </many-to-one>
        <many-to-one name="creator" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.User" fetch="select">
            <column name="CreatorID" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="Name" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="Description" length="1000" not-null="true" />
        </property>
        <property name="created" type="timestamp" insert="false">
            <column name="Created" length="19" not-null="true" />
        </property>
        <set name="simulationExecutions" table="simulation_execution" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ConfigurationID" not-null="true" />
            </key>
            <one-to-many class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.SimulationExecution" />
        </set>
    </class>
</hibernate-mapping>
