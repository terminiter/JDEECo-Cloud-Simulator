<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.Project" table="project" catalog="jdeeco_simulation">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <many-to-one name="creator" class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.User" fetch="select">
            <column name="CreatorID" not-null="true" />
        </many-to-one>
        <property name="name" type="string">
            <column name="Name" not-null="true" />
        </property>
        <property name="description" type="string">
            <column name="Description" length="1000" not-null="true" />
        </property>
        <set name="simulationConfigurations" table="simulation_configuration" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="ProjectID" not-null="true" />
            </key>
            <one-to-many class="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.SimulationConfiguration" />
        </set>
        <set name="visibleForUsers" table="visible_project" inverse="false" lazy="true" fetch="select">
            <key>
                <column name="ProjectID" not-null="true" />
            </key>
            <many-to-many entity-name="cz.cuni.mff.d3s.jdeeco.cloudsimulator.jobmanager.data.models.User">
                <column name="UserID" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
